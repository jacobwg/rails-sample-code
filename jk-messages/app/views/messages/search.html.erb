<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>Search Results <small><%= @query %></small></h1>
    </div>
  </div>
</div>

<% if @messages.size == 0 %>
  <p>There are no search results found...</p>
<% else %>
  <%= paginate @messages %>
  <div class="search"><%= render(@messages) %></div>
  <%= paginate @messages %>
<% end %>
