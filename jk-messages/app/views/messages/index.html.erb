<% page_title @day.strftime('%A, %B %e, %Y') %>
<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>Messages Sent <small><%= @day.strftime('%A, %B %e, %Y') %></small></h1>
    </div>
  </div>
</div>

<% if @messages.size == 0 %>
  <%= render 'pagination' %>
  <p>There were no messages sent on <%= @day.strftime('%A, %B %e, %Y') %></p>
<% else %>
  <div><%= render(@messages) %></div>
  <%= render 'pagination' %>
<% end %>

<script type="text/javascript">
  window.defaultDate = [<%= @day.year %>, <%= @day.month %>, <%= @day.day %>];
  window.maxDate = [<%= @last_day.year %>, <%= @last_day.month %>, <%= @last_day.day %>];
  window.unsentDays = <%= @unsent_days.to_json.html_safe %>;
</script>